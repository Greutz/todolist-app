<div class="container">

  <div class="row d-flex justify-content m-5">
    <%= button_to "Recevoir un email", { action: "create" }, remote: true%>
  </div>

  <div class="row d-flex justify-content-center ml-5">
     <div class="col-3">
        <h3 class="d-flex justify-content-center">
            Liste des emails
        </h3>
    </div>
    <div class="col-9 d-flex flex-column">
        <h3 class="d-flex justify-content-center mr-5">
            Email sélectionné
        </h3>
    </div>
  </div></br>

  <div class="container">
      <div class="row d-flex justify-content-center  border border-primary rounded m-5">
        <div class="col-3" id="object">
            <% @emails.each do |email| %>
            <div class="d-flex justify-content-center m-auto" id="object_<%= email.id %>">
              <% if email.read == false%>
                <strong><p><%=link_to email.object + ' :', email_path(email.id), remote: true, :class => "text-dark" %></p></strong>
              <% else %>
                <p><%=link_to email.object + ' :', email_path(email.id), remote: true, :class => "text-dark" %></p>
              <% end %>
            </div>
            <% end %>
        </div>

        <div class="col-9 d-flex flex-column border-left border-primary">
            <p class="d-flex justify-content-center m-auto" id="body">
            </p>
        </div>
      </div>
  </div>

</div>


